@model Student
<h2>Wypełnij pola aby utworzyć nowego studenta</h2>

<form asp-action="Create" >
    <label>Imię</label> <input type="text" asp-for="FirstName" />
    <label>Nazwisko</label> <input type="text" asp-for="LastName" />
    <label>Kierunek</label> 
    <select name="studies" class="browser-default">
        <option value="" disabled selected>Wybierz kierunek</option>
        <option value="Informatyka">Informatyka</option>
        <option value="Sztuka nowych mediów">Sztuka nowych mediów</option>
        <option value="Zarządanie">Zarządanie</option>
    </select>
    <input type="submit" value="Dodaj" />
</form>


